        <tooltip>
            <Tooltip text="City"></Tooltip>
        </tooltip>
    </TextField>
    <Button text="Submit" onMouseClicked="#submitInformation" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2" prefHeight="40" maxWidth="250"/>
    </GridPane>
    </center>
    <right>
        <VBox minWidth="250" maxWidth="250">
            <padding>
                <Insets top="20"></Insets>
            </padding>
            <ImageView preserveRatio="true" fitWidth="200">
                <image>
                    <Image url="@../DSC_0009.JPG"/>
