<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox>
            <MenuBar prefWidth="500">
                <Menu text="File">
                    <MenuItem text="File"></MenuItem>
                    <MenuItem text="Edit"></MenuItem>
                    <SeparatorMenuItem></SeparatorMenuItem>
                    <MenuItem text="Retrieve"></MenuItem>
                </Menu>
                <Menu text="Edit"></Menu>
                <Menu text="Retrieve"></Menu>
            </MenuBar>
        </HBox>
    </top>
    <center>
    <GridPane>
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"></Insets>
        </padding>
    <Label GridPane.rowIndex="0" GridPane.columnIndex="0">First Name: </Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="0">
        <tooltip>
            <Tooltip text="First Name"></Tooltip>
        </tooltip>
    </TextField>

    <Label GridPane.rowIndex="1" GridPane.columnIndex="0">Last Name: </Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1">
        <tooltip>
